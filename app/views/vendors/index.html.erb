<section class="content">
  <header class="content__title">
    <h1>Vendors</h1>

    <div class="actions">
      <a href="" class="actions__item zmdi zmdi-trending-up"></a>
      <a href="" class="actions__item zmdi zmdi-check-all"></a>

      <div class="dropdown actions__item">
        <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
        <div class="dropdown-menu dropdown-menu-right">
          <a href="" class="dropdown-item">Refresh</a>
          <a href="" class="dropdown-item">Manage Widgets</a>
          <a href="" class="dropdown-item">Settings</a>
        </div>
      </div>
    </div>
  </header>

  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Vendors</h2>
      <small class="card-subtitle">Search for vendors.</small>
    </div>

    <div class="table-responsive">
      <table id="grid-vendors" class="table">
        <thead>
          <tr>
            <th data-column-id="vendor_num" data-identifier="true"> Vendor #</th>
            <th data-column-id="vendor_name" data-order="asc" > Vendor Name</th>
          </tr>
        </thead>
      </table>
    </div>

  </div>

</section>

<%= content_for :body_end do %>
<%= init_grid(
  "grid-vendors",
  url: "/vendors.json",
  primaryKey: "id",
  formatters: {

    },
    handlers: {
      click: { fn: :inspect, url: "/vendors", identifier: 'id' }
    }
    ) %>
    <% end %>
